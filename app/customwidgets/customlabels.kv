<CustomRegularLabel@Label>
    font_name: 'assets/fonts/Poppins-Regular.ttf'
    font_size: '14sp'
    text_size: self.size
    halign: 'center'
    valign: 'center'
    color: 'white'
    
<CustomBoldLabel@Label>
    font_name: 'assets/fonts/Poppins-Bold.ttf'
    font_size: '20sp'
    text_size: self.size
    halign: 'center'
    valign: 'center'
    color: 'white'
    
<UnitLabel@Label>
    font_name: 'assets/fonts/Poppins-Regular.ttf'
    font_size: '18sp'
    size_hint_x: None
    width: self.texture_size[0]  # Set width to the text width
    text_size: None, None
    halign: 'right'
    valign: 'middle'
    color: 'white'